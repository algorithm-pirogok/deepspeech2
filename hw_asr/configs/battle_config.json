{
  "name": "battle_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512,
      "params_for_rnn": {
        "count": 6,
        "hidden_size": 512,
        "rnn_model": "LSTM",
        "dropout": 0.05,
        "bidirectional": true,
        "batch_norm": true
      },
      "params_for_convolutions": {
        "in_channels": 1,
        "batch_norm": true,
        "convolutions": [
          {
          "out_channels": 32,
          "kernel_size": [41, 11],
          "stride": [2, 2],
          "dilation": [1, 1],
          "padding": [20, 5]
        },
          {
          "out_channels": 32,
          "kernel_size": [21, 11],
          "stride": [2, 1],
          "dilation": [1, 1],
          "padding": [10, 5]
        },
          {
          "out_channels": 1,
          "kernel_size": [3, 5],
          "stride": [1, 1],
          "dilation": [1, 1],
          "padding": [1, 2]
        }

        ]
      }
    }
  },
  "data": {
    "train": {
      "batch_size": 100,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 17.0,
            "max_text_length": 200
          },
          "module": "hw_asr.datasets"
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 17.0,
            "max_text_length": 200
          },
          "module": "hw_asr.datasets"
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 5.0,
            "max_text_length": 200
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "val": {
      "batch_size": 30,
      "num_workers": 7,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "test-other": {
      "batch_size": 30,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 30,
      "num_workers": 7,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 256,
      "epochs": 75,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 76,
    "save_dir": "saved/",
    "save_period": 4,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "librispeech",
    "wandb_name": "base deepspeech2",
    "len_epoch": 256,
    "grad_norm_clip": 10
  }
}
